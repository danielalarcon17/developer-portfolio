---
import Tag from '../Tag/Tag.astro';

interface Props {
	date: string;
	title: string;
	description: string;
	tags: string[];
}

const { date, title, description, tags } = Astro.props;
---

<div
	class:list={[
		'experincie-container',
		'w-full',
		'h-auto',
		'flex',
		'flex-col lg:flex-row',
		'gap-2 lg:gap-8',
		'rounded',
		'p-6',
		'hover:bg-secondary-100',
	]}>
	<div class:list={['flex-0']}>
		<h1 class:list={['text-neutral-500', 'text-sm', 'pt-none lg:pt-1.5']}>
			{date}
		</h1>
	</div>
	<div class:list={['flex-1', 'flex', 'flex-col', 'gap-0.5']}>
		<h1 class:list={['font-bold', 'text-lg', 'text-neutral-950']}>
			{title}
		</h1>
		<p class:list={['text-neutral-700']}>{description}</p>
		<ul class:list={['flex', 'flex-wrap', 'mb-1.5']}>
			{
				tags.map((tag: string) => (
					<li>
						<Tag text={tag} />
					</li>
				))
			}
		</ul>
	</div>
</div>
