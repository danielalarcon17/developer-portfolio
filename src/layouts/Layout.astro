---
import '@fontsource-variable/onest';
import Header from '../components/Header/Header.astro';

interface Props {
	title: string;
}
---

<!doctype html>
<html
	lang='en'
	class:list={[
		['bg-neutral-100', 'dark:bg-neutral-800'],
		['text-neutral-800', 'dark:text-neutral-200'],
	]}>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Portfolio of Daniel Alarcón, Software Engineer specialized in the web'
		/>
		<meta name='viewport' content='width=device-width' />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name='generator' content={Astro.generator} />
		<title>Daniel Alarcón - Software Engineer</title>
		<script
			is:inline
			src='https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js'
		></script>
	</head>
	<body
		class:list={['max-w-screen-2xl', 'min-h-screen', 'w-auto', 'mx-auto']}>
		<div class:list={['h-[250px]', 'w-full']}>
			<Header />
		</div>
		<div
			class:list={[
				'max-w-screen-xl',
				'mx-auto',
				'pr-0 md:pr-12 2xl:pr-0',
				'pl-0 md:pl-12 2xl:pl-0',
				'mt-none sm:mt-12 xl:mt-16',
			]}>
			<slot />
		</div>
	</body>
</html>

<style is:global>
	:root {
		font-family: 'Onest Variable', sans-serif;
		color-scheme: light dark;
	}
</style>
